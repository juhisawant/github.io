  <script>
    function toggleTravel(element) {
      const isActive = element.classList.contains('active');
      document.querySelectorAll('.travel-entry.active').forEach(el => {
        if (el !== element) {
          el.classList.remove('active');
          el.setAttribute('aria-expanded', 'false');
          el.querySelector('.travel-description').setAttribute('aria-hidden', 'true');
        }
      });
      if (!isActive) {
        element.classList.add('active');
        element.setAttribute('aria-expanded', 'true');
        element.querySelector('.travel-description').setAttribute('aria-hidden', 'false');
      } else {
        element.classList.remove('active');
        element.setAttribute('aria-expanded', 'false');
        element.querySelector('.travel-description').setAttribute('aria-hidden', 'true');
      }
    }
  </script>
